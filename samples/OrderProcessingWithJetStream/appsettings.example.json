{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Wolverine": "Debug",
      "Wolverine.Nats": "Debug"
    }
  },
  "Wolverine": {
    "Nats": {
      // Core Connection Settings
      "ConnectionString": "nats://localhost:4222",
      "ClientName": "my-service",
      "ConnectTimeout": "00:00:10",
      "RequestTimeout": "00:00:30",
      
      // Authentication Options (choose one)
      "Username": "myuser",
      "Password": "mypassword",
      "Token": "my-auth-token",
      "CredentialsFile": "/path/to/.creds",
      "NKeyFile": "/path/to/nkey",
      "Jwt": "my-jwt-token",
      "NKeySeed": "my-nkey-seed",
      
      // TLS Configuration
      "EnableTls": true,
      "TlsMode": "Auto",
      "TlsInsecure": false,
      "ClientCertFile": "/path/to/client.crt",
      "ClientKeyFile": "/path/to/client.key",
      "CaFile": "/path/to/ca.crt",
      
      // JetStream Configuration
      "EnableJetStream": true,
      "JetStreamDomain": "my-domain",
      "JetStreamApiPrefix": "$JS.API",
      "AutoProvision": true,
      
      // Transport Settings
      "DefaultQueueGroup": "my-service-group",
      "NormalizeSubjects": true,
      
      // JetStream Defaults
      "JetStreamDefaults": {
        "Retention": "limits",
        "MaxAge": "7.00:00:00",
        "MaxMessages": 1000000,
        "MaxBytes": 1073741824,
        "Replicas": 1,
        "AckPolicy": "explicit",
        "AckWait": "00:00:30",
        "MaxDeliver": 3,
        "DuplicateWindow": "00:02:00"
      }
    }
  }
}